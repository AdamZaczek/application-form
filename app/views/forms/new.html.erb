<%= simple_form_for @form do |f| %>
  <%= f.input :opis, error: 'Brak opisu lub opis zbyt krótki.' %><br />
  <%= f.input :kategoria, collection: ['awaria', 'uszkodzenie', 'usterka'], prompt: "Kategoria", error: "Musisz wybrać kategorię." %><br />
  <%= f.input :email, placeholder: 'exampleuser@domain.com', error: 'Niewłaściwy email.' %><br />
  <%= f.button :submit %>
<% end %>


